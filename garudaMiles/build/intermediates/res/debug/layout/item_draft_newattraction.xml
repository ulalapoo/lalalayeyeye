<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >

    <ImageView
        android:id="@+id/imageItem"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:layout_alignRight="@+id/imageItem">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
            android:textColor="#FF0065b3"
            android:layout_marginTop="5dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry industry industry industry industry industry industry"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="3dp"
            android:id="@+id/tvDesc"
            android:textColor="#FFaaaaaa"
            android:textSize="14sp" />


        <View
            android:id="@+id/backgroundLine"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="2dp"
            android:layout_below="@+id/tvDesc"
            android:layout_marginTop="3dp"
            android:background="#FFaaaaaa" />

    </LinearLayout>




</RelativeLayout><!-- From: file:/C:/Users/Sulalah%20Rugaya/StudioProjects/GarudaMiles/garudaMiles/src/main/res/layout/item_draft_newattraction.xml -->